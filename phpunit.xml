<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.5/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true">
    <testsuites>
        <testsuite name="Unit Tests">
            <directory suffix="Test.php">tests/Unit</directory>
        </testsuite>
        <testsuite name="Fast">
            <!-- Focus on pure, dependency-light tests for quick feedback -->
            <directory suffix="Test.php">tests/Unit/Service/Export/PDF</directory>
            <directory suffix="Test.php">tests/Unit/Service/Export/SEPA</directory>
            <directory suffix="Test.php">tests/Unit/Service/Export</directory>
            <directory suffix="Test.php">tests/Unit/Validation</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <include>
            <directory suffix=".php">lib</directory>
        </include>
    </coverage>
</phpunit>
